<div class="w3-cell w3-center w3-mobile">
    <div class="w3-card-2 w3-padding-16 w3-margin-right <?= $this->color ?>">
        <?php if ($this->title): ?>
                <h1><?= $this->title ?></h1>
        <?php endif; ?>
        <?php if ($this->image): ?>
                <img src="<?= $this->image ?>" class="w3-image" style="max-height:230px;min-height:200px">
        <?php endif; ?>
        <?php if ($this->text): ?>
                <p><?= $this->text ?></p>
        <?php endif; ?>
        <?php if ($this->count() != 0): ?>
                <div>
                    <?php foreach ($this->children() as $item): ?>
                            <?php $item->render() ?>
                    <?php endforeach; ?>
                </div>
        <?php endif; ?>
        <?php if ($this->button): ?>
                <div class="w3-center">
                    <?= $this->button->render() ?>
                </div>
        <?php endif; ?>
    </div>
</div>
