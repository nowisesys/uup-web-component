<div class="item-content w3-center w3-mobile w3-margin-bottom">
    <div class="<?= $this->padding ?> <?= $this->color ?>">
        <?php if ($this->title): ?>
                <h1><?= $this->title ?></h1>
        <?php endif; ?>
        <?php if ($this->image): ?>
                <a href="<?= $this->href ?>">
                    <img src="<?= $this->image ?>" class="w3-image">
                </a>
        <?php endif; ?>
        <?php if ($this->text): ?>
                <p><?= $this->text ?></p>
        <?php endif; ?>
        <?php if ($this->hasComponents()): ?>
                <div>
                    <?php foreach ($this->getComponents() as $component): ?>
                            <?php $component->render() ?>
                    <?php endforeach; ?>
                </div>
        <?php endif; ?>
    </div>
</div>    
